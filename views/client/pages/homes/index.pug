                            div(class="award__item")
                                img(
                                    src="/client/images/section-4-award-05.png" 
                                    alt=""
                                )
                            div(class="award__item")
                                img(
                                    src="/client/images/section-4-award-06.png" 
                                    alt=""
                                )

    //- section 5
    section(class="section section__five")
        div(class="container")
            +box-head("LATEST NEWS")
            //- +articles-with-swiperjs("", 6, "swiper__article")
            +articles("", 3)
    
block script
    //- swiperjs
    script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js")

