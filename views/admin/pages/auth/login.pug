extends ../../layouts/auth.pug

//- Mixins
include ../../mixins/box-head
include ../../mixins/pagination
include ../../mixins/form
include ../../mixins/alert

//- Title
block title 
    title #{title}

//- Mai Title
block main
    +alert-success
    +alert-warning
    +alert-error
    div(class="center")
        form(
            id="form-login-admin"
            class="form__login"
            method="POST"
            action=`${path_admin}/auth/login`
        )   
            div(class="form__login-group")
                div(class="form__login-image")
                    img(src="/admin/images/login-welcom.jpg", alt="")
                div(class="form__login-title")  Đăng nhập

                
            div(class="form__login-item")
                label(for="email") Email
                input(
                    type="email"
                    id="email"
                    name="email"
                    placeholder="example@gmail.com"
                ) 
            div(class="form__login-item")
                label(for="password") Mật khẩu
                input(
                    type="password"
                    id="password"
                    name="password"
                    placeholder="Nhập mật khẩu của bạn "
                ) 
                div(class="form__login-password-icon")
                    <i class="fa-regular fa-eye"></i>

            button(type="submit" class="form__login-button") Đăng nhập

block script 
    script(type='module' src="/admin/js/auth.js")