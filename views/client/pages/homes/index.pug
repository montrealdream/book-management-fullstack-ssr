extends ../../layouts/default.pug

//- mixins
include ../../mixins/box-head.pug
include ../../mixins/products.pug
include ../../mixins/articles.pug

//- title
block title 
    title #{title}

//- Main
block main 
    //- section 1
    include ../../partials/section-one.pug
    
    //- section suport
    include ../../partials/section-policy-suport.pug

    //- section2
    section(class="section section__two")
        div(class="container")
            +box-head("NEW ARRIVALS")
            +products(records)
    
    //- section 3
    section(class="section section__three")
        div(class="section__three-title")
            h3(
                class="section__three-title-top"
                data-aos="fade-up"
                data-aos-duration="500"
            ) Mua sắm nhiều bộ sưu tập khác nhau

            h2(
                class="section__three-title-main"
                data-aos="fade-up"
                data-aos-duration="500"
                data-aos-delay="150"
            ) Lễ hội sách

            h3(
                class="section__three-title-bottom"
                data-aos="fade-up"
                data-aos-duration="500"
                data-aos-delay="300"
            ) Tất cả sách đều giảm giá <b>50%</b>

            a(
                href="#shopnow"
                data-aos="fade-up"
                data-aos-duration="500"
                data-aos-delay="450"
            ) Mua Ngay

    //- section 4 (không đẹp nên tạm đóng)
    //- section(class="section section__four")
