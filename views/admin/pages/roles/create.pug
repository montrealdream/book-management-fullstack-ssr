extends ../../layouts/default.pug

//- Mixins
include ../../mixins/box-head
include ../../mixins/pagination
include ../../mixins/form
include ../../mixins/upload-image
include ../../mixins/alert

//- Title
block title 
    title #{title}

//- Mai Title
block main
    +alert-success
    +alert-warning
    +alert-error
    //- box-head
    -
        var breadcrumbArray = 
        [
            "Dashboard",
            "Nhóm Quyền",
            "Thêm Mới Nhóm Quyền"
        ]
        
    +box-head-use-breadcrumb("THÊM MỚI NHÓM QUYỀN", breadcrumbArray)

    //- card
    div(class="card")
        div(class="card__body")
            form(
                id="form-create-role"
                action=`${path_admin}/roles/create`
                method="post"
                class="form form__create"
            )   
                div(class="form__normal")
                    div(class="form__item")
                        label(for="" class="label") Tên
                        input(
                            name="title"
                            type="text"
                            placeholder="Nhập tên nhóm quyền của bạn"
                        )
                    div(class="form__item")
                        label(for="" class="label") Mô tả Nhóm Quyền
                        textarea(
                            name="description"
                            rows="5"
                            placeholder="Mô Tả Nhóm Quyền..."
                            class="textarea-tinymce"
                        )

                //- button submit
                div(class="form__submit")
                    button(type="submit" class="button button__outline") Tạo Mới

    //- end card
block script 
    //- tiny-mce
    script(src="/tinymce/tinymce.min.js")
    script(src="/admin/js/tinymce-config.js")
    //- hết tiny-mce

    script(src="/admin/js/script.js")