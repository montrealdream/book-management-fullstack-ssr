    //- demo pagination
    -   
        var paginationObject = 
        {
            totalPage: 10,
            currentPage: 7
        }
    
    //- card
    div(class="card")
        div(class="card__head") 
            div(class="card__head-wrap")
                //- filter
                +filter-status(filterStatusArray)
                //- left    
                div(class="card__head-left")
                    //- form search
                    +form-search(keyword)
                    //- select
                    +select-sort

                //- right
                div(class="card__head-right")
                    //- add product
                    div(class="button button__outline")
                        <i class="fa-solid fa-plus"></i>
                        |   Thêm Mới
               

        div(class="card__body")
            //- table
            table(class="table") 
                thead(class="table__head")
                    tr 
                        td 
                            input(
                                type = "checkbox"
                                name=""
                                class="checkbox-tick"
                                check-box-all
                            )
                        th Sản Phẩm 
                        th Danh Mục
                        th Số lượng
                        th Giá
                        th Trạng Thái
                        th 
                    
                tbody(class="table__body")
                    each item in records 
                        tr 
                            td 
                                input(
                                    type = "checkbox"
                                    name=""
                                    class="checkbox-tick"
                                    check-box-single = item.id
                                )
                            td(class="table__title")
                                img(
                                    src=item.thumbnail 
                                    alt=item.title
                                )
                                
                                h3 #{item.title}
                            
                            td #{(item.category ? item.category : "Đang Cập Nhật")}
                            td 
                                if(item.stock > 0)
                                    span(class="badge badge--active") #{item.stock} Trong Kho
                                else 
                                    span(class="badge badge--inactive") Hết hàng
                                    
                            td #{item.price} VND
                            
                            td 
                                if(item.status == "active")
                                    span(
                                        class="badge badge--active"
                                        button-status-id = item.id
                                        button-status = "active"
                                    ) Hoạt động
                                    
                                else 
                                    span(
                                        class="badge badge--inactive"
                                        button-status-id = item.id
                                        button-status = "inactive"
                                    ) Dừng hoạt động
                            td
                                div(class="table__option-icon")
                                    <i class="fa-solid fa-ellipsis-vertical"></i>
                                    div(class="table__option-tab hidden")
                                        ul 
                                            li 
                                                a(href="#") Chỉnh Sửa
                                            li 
                                                a(href="#") Xem Chi Tiết
                                            li 
                                                a(
                                                    href="javascript:;"
                                                    button-delete-soft=item.id
                                                ) Xóa

                    //- end table
        
        div(class="card__footer")
            div(class="card__footer-left")
            div(class="card__footer-right")
                +pagination(paginationObject)

        //- form đổi trạng thái item
        +form-change-status 

        //- form xóa mềm sản phẩm
        +form-delete-soft
        
    //- end card 


